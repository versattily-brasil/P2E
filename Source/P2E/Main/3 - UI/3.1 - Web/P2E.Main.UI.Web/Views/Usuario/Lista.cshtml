@model List<P2E.SSO.API.ViewModel.UsuarioVM>
@{
    ViewData["Title"] = "Lista de Usuários";
    ViewData["PageName"] = "usuario_lista";
    ViewData["Category1"] = "Usuário";

    //Alert info
    var type = (string)TempData["_alert.type"];
    var title = (string)TempData["_alert.title"];
    var body = (string)TempData["_alert.body"];
}

<div class="row">
    <div class="col-xl-12">

        @if (!string.IsNullOrEmpty(type))
        {
            <div class="alert alert-@type alert-dismissible" role="alert">
                <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <strong>@title</strong> @body
            </div>
        }

        <div class="panel">
            <div class="panel-hdr">
                <h1>
                    Lista de Usuários
                </h1>
            </div>
            <div class="panel-container show">
                <div class="panel-content">
                    <div class="row">
                        <div class="col-md-4">
                            <input type="text" class="form-control" placeholder="Digite algo para procurar..." />
                        </div>
                        <div class="col-md-2">
                            <button class="btn btn-default"><i class="fal fa-search"></i>&nbsp;&nbsp;Localizar</button>
                        </div>
                        <div class="col-md-6">
                            <a asp-action="Cadastro" class="btn btn-primary float-right"><i class="fal fa-plus-circle"></i>&nbsp;&nbsp;Adicionar</a>
                        </div>
                    </div><br />
                    <div class="table-responsive">
                        <table class="table table-bordered table-hover m-0">
                            <thead class="thead-themed">
                                <tr>
                                    <th width="100">#</th>
                                    <th>Nome</th>
                                    <th>Login</th>
                                    <th>Status</th>
                                    <th width="20"></th>
                                    <th width="20"></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var usr in Model)
                                {
                                <tr>
                                    <td>@usr.CD_USR</td>
                                    <td>@usr.TX_NOME</td>
                                    <td>@usr.TX_LOGIN</td>
                                    <td>@usr.OP_STATUS</td>
                                    <td class="text-center">
                                        <i data-id="@usr.CD_USR"
                                           data-controller="Usuario"
                                           data-action="Excluir"
                                           data-body-message="Deseja excluir este Usuário?"
                                           style="font-weight:bold;cursor:pointer" class="delete fal fa-trash-alt text-danger">

                                        </i>
                                    </td>
                                    <td class="text-center"><a asp-action="Cadastro" asp-route-id="@usr.CD_USR"><i style="font-weight:bold;cursor:pointer" class="fal fa-edit text-success"></i></a></td>
                                </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
