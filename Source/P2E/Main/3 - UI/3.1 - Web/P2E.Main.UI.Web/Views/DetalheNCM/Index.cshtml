@model P2E.Main.UI.Web.Models.IMP.DetalheNCM.DetalheNCMListViewModel
@{
    ViewData["Title"] = "Listagem de NCM";
    ViewData["PageName"] = "ncm_lista";
    ViewData["Category1"] = "Detalhes NCM";

    //Alert info
    var type = (string)TempData["_alert.type"];
    var title = (string)TempData["_alert.title"];
    var body = (string)TempData["_alert.body"];

    var nome_rotina = "Detalhes NCM";

}

<div class="row">
    <div class="col-xl-12">

        @if (!string.IsNullOrEmpty(type))
        {
            <partial name="_DisplayMessagePartial" />
        }
        <div class="panel">
            <div class="panel-hdr">
                <div class="col-lg-5">
                    <h1>
                        Lista de NCM
                    </h1>
                </div>
                @*<div class="col-lg-7 text-lg-right">
                        <a asp-action="Create" class="btn btn-primary float-right"><i class="fal fa-plus-circle"></i>&nbsp;&nbsp;Adicionar</a>
                    </div>*@

            </div>
            <div class="panel-container show">
                <div class="panel-content">
                    <form asp-action="/" method="get" id="formLista">
                        <input type="hidden" asp-for="DataPage.CurrentPage" value="1" />
                        <input type="hidden" asp-for="DataPage.Descending" />
                        @*<input type="hidden" asp-for="DataPage.PageSize" />*@

                        <div class="row">
                            <div class="col-md-6">
                                <input type="text" asp-for="descricao" class="form-control" placeholder="descrição" />
                            </div>

                            <div class="col-md-2">
                                <button class="btn btn-default" type="submit"><i class="fal fa-search"></i>&nbsp;&nbsp;Localizar</button>
                            </div>

                        </div><br />

                        <div class="row">
                            <div class="col-sm-9 "></div>
                            <div class="col-sm-0 form-text text-right">Exibir</div>
                            <div class="col-sm-1 text-lg-right">
                                <select asp-for="DataPage.PageSize" class="form-control" style="width: 70px" id="comboQtdRegistro">

                                    <option value="5">5</option>
                                    <option value="10">10</option>
                                    <option value="15">15</option>
                                    <option value="20">20</option>
                                    <option value="25">25</option>

                                </select>
                            </div>
                            <div class="col-sm-0 form-text text-left" style="width: 10px">Registros</div>
                        </div>

                    </form>

                    <hr />
                    @if (Model.DataPage.Items.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-bordered table-hover m-0">
                                <thead class="thead-themed">
                                    <tr>
                                        @*<th width="100">Id</th>*@
                                        <th>NCM</th>
                                        <th>Detalhe</th>
                                        <th>Descrição</th>
                                        @*<th width="20"></th>*@
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model.DataPage.Items)
                                    {
                                        <tr>
                                            <td>@item.TX_SFNCM_CODIGO</td>
                                            <td>@item.TX_SFNCM_DETALHE</td>
                                            <td>@item.TX_SFNCM_DESCRICAO</td>

                                            @*<td class="text-center">
                                                @if (P2E.Main.UI.Web.Extensions.Util.Permissoes.VerificarPermissao(nome_rotina, "Visualizar", User))
                                                {
                                                    <a asp-action="View" asp-route-id="@item.CD_DET_NCM"><i style="font-weight:bold;cursor:pointer" class="fal fa-search text-success"></i></a>
                                                }
                                            </td>*@
                                        </tr>
                                    }
                                </tbody>
                            </table>
                            <br />

                            <!-- pager -->
                            @if (Model.DataPage.Pages != null && Model.DataPage.Pages.Any())
                            {
                                <nav class="table-responsive">
                                    <ul class="pagination justify-content-center d-flex flex-wrap">
                                        @if (Model.DataPage.CurrentPage > 1)
                                        {
                                            <li class="page-item">
                                                <a class="page-link" href="@Model.DataPage.GetLinkPage($"txt_dec={""}", Model.DataPage.FirstPage)">Primeiro</a>
                                            </li>
                                            <li class="page-item">
                                                <a class="page-link" href="@Model.DataPage.GetLinkPage($"txt_dec={""}", Model.DataPage.PriorPage)">Anterior</a>
                                            </li>
                                        }

                                        @for (int i = 1; i <= Model.DataPage.TotalPages; i++)
                                        {
                                            var pg = Model.DataPage.Pages.First(p => p.PageNumber == i);

                                            <li class="page-item @(pg.PageNumber == Model.DataPage.CurrentPage ? "active" : "")">
                                                <a class="page-link" href="@Model.DataPage.GetLinkPage($"txt_dec={""}", pg.PageNumber)">@pg.PageNumber</a>
                                            </li>
                                        }


                                        @if (Model.DataPage.CurrentPage < Model.DataPage.TotalPages)
                                        {
                                            <li class="page-item">
                                                <a class="page-link" href="@Model.DataPage.GetLinkPage($"txt_dec={""}", Model.DataPage.NextPage)">Próximo</a>
                                            </li>
                                            <li class="page-item">
                                                <a class="page-link" href="@Model.DataPage.GetLinkPage($"txt_dec={""}", Model.DataPage.LastPage)">Último</a>
                                            </li>
                                        }
                                    </ul>
                                </nav>
                            }

                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>