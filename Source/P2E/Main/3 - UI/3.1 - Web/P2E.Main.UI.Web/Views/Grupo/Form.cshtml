@model P2E.Main.UI.Web.Models.SSO.Grupo.GrupoViewModel
@{
    ViewData["Title"] = "Cadastro";
    ViewData["PageName"] = "grupo_novo";
    ViewData["Category1"] = "Grupo";

    //Alert info
    var type = (string)TempData["_alert.type"];
    var title = (string)TempData["_alert.title"];
    var body = (string)TempData["_alert.body"];
}

<div class="row">
    <div class="col-xl-12">

        @if (!string.IsNullOrEmpty(type))
        {
            <partial name="_DisplayMessagePartial" />
        }

        <div class="panel">
            <div class="panel-hdr">
                <h1>
                    Cadastro de Grupos
                </h1>
            </div>
            <div class="panel-container show">
                <div class="panel-content">
                    <form asp-action="Save" method="post">
                        <input type="hidden" asp-for="CD_GRP" />
                        <div class="form-group">
                            <label class="form-label" asp-for="TX_DSC">Descrição</label>
                            <input type="text" maxlength="100" asp-for="TX_DSC" placeholder="Descrição" class="form-control">
                        </div>

                        <div class="form-group mb-0">
                            <div class="panel">
                                <div class="panel-hdr bg-gray-100">
                                    <h3>
                                        Associação de Rotinas ao Grupo
                                    </h3>
                                </div>
                                <div class="panel-container show">
                                    <div class="panel-content">
                                        <div class="row">
                                            <div class="col-11">
                                                <div class="form-group">
                                                    <label class="form-label">Rotina</label>
                                                    <select asp-items="@(new SelectList(@Model.Rotinas,"CD_ROT", "TX_NOME"))" class="form-control" id="comboRotina">
                                                        <option disabled selected>--- Selecione uma rotina ---</option>
                                                    </select>
                                                </div>
                                            </div>

                                            <div class="col-1">
                                                <a href="javascript:void(0);" class="btn btn-success btn-lg btn-icon hover-effect-dot btn-add-rotina">
                                                    <i class="fal fa-plus"></i>
                                                </a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>


                        <div class="form-group mb-0">
                            <div class="table-responsive">
                                <table id="tabela_servico_modulo" class="table table-bordered table-hover m-0">
                                    <thead class="thead-themed">
                                        <tr>
                                            <th></th>
                                            <th colspan="@Model.Operacoes.Count" style="text-align:center">Permissões</th>
                                            <th></th>

                                        </tr>
                                        <tr>
                                            <th>Rotina</th>
                                            @foreach (var operacao in @Model.Operacoes)
                                            {
                                                <th>@operacao.TX_DSC</th>
                                            }
                                            <th width="20"></th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @*@foreach (var modulo_servico in Model.ParceiroNegocioServicoModulo)
                                        {
                                            <tr data-cdmod="@modulo_servico.Modulo.CD_MOD" data-cdsrv="@modulo_servico.Servico.CD_SRV">
                                                <td>@modulo_servico.Modulo.TX_DSC</td>
                                                <td>@modulo_servico.Servico.TXT_DEC</td>
                                                <td class="text-center">
                                                    <a data-mod="@modulo_servico.CD_MOD" data-srv="@modulo_servico.CD_SRV">
                                                        <i style="font-weight:bold;cursor:pointer" class="fal fa-minus-circle text-danger bt-excluir"></i>
                                                    </a>
                                                </td>
                                            </tr>

                                        }*@
                                    </tbody>
                                </table>
                            </div>
                        </div>
                        <br />
                        <button type="submit" class="btn btn-primary">Salvar</button>
                        <button type="button" class="btn btn-danger" value="Cancel" onclick="history.back();">Cancelar</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>