@model P2E.Shared.Model.DataPage<P2E.SSO.Domain.Entities.ParceiroNegocio>
@{
    ViewData["Title"] = "Lista de Parceiros de Negócio";
    ViewData["PageName"] = "parceiro_negocio";
    ViewData["Category1"] = "Parceiro de Negócio";

    //Alert info
    var type = (string)TempData["_alert.type"];
    var title = (string)TempData["_alert.title"];
    var body = (string)TempData["_alert.body"];
}

<div class="row">
    <div class="col-xl-12">

        @if (!string.IsNullOrEmpty(type))
        {
            <div class="alert alert-@type alert-dismissible" role="alert">
                <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <strong>@title</strong> @body
            </div>
        }

        @if (!string.IsNullOrEmpty(type))
        {
            <div class="alert alert-@type alert-dismissible" role="alert">
                <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <strong>@title</strong> @body
            </div>
        }

        <div class="panel">
            <div class="panel-hdr">
                <h1>
                    Lista de Parceiros de Negócio
                </h1>
            </div>
            <div class="panel-container show">
                <div class="panel-content">
                    <div class="row">
                        <form asp-action="Index" method="get">
                            <div class="col-md-8">
                                <div class="form-group">
                                    <label class="form-label">Razão  Social</label>
                                    <input type="text" id="razaosocial" placeholder="Razão Social" class="form-control">
                                </div>
                                <div class="form-group">
                                    <label class="form-label">CNPJ</label>
                                    <input type="text" id="cnpj" placeholder="CNPJ" class="form-control">
                                </div>
                            </div>
                            <div class="col-md-2">
                                <button type="submit" class="btn btn-default"><i class="fal fa-search"></i>&nbsp;&nbsp;Localizar</button>
                            </div>
                        </form>
                        <div class="col-md-2">
                            <a asp-action="Create" class="btn btn-primary float-right"><i class="fal fa-plus-circle"></i>&nbsp;&nbsp;Adicionar</a>
                        </div>
                    </div><br />
                    <div class="table-responsive">
                        <table class="table table-bordered table-hover m-0">
                            <thead class="thead-themed">
                                <tr>
                                    <th>Código</th>
                                    <th>Razão Social</th>
                                    <th>CNPJ</th>
                                    <th width="20"></th>
                                    <th width="20"></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.Items)
                                {
                                    <tr>
                                        <td>@item.CD_PAR</td>
                                        <td>@item.TXT_RZSOC</td>
                                        <td>@item.CNPJ</td>
                                        <td class="text-center">
                                            <i data-id="@item.CD_PAR"
                                               data-controller="ParceiroDeNegocio"
                                               data-action="Delete"
                                               data-body-message="Deseja excluir este registro?"
                                               style="font-weight:bold;cursor:pointer" class="delete fal fa-trash-alt text-danger">

                                            </i>
                                        </td>
                                        <td class="text-center"><a asp-action="Edit" asp-route-id="@item.CD_PAR"><i style="font-weight:bold;cursor:pointer" class="fal fa-edit text-success"></i></a></td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                        <br />
                        <!-- pager -->
                        @if (Model.Pages != null && Model.Pages.Any())
                        {
                            <nav class="table-responsive">
                                <ul class="pagination justify-content-center d-flex flex-wrap">
                                    @if (Model.CurrentPage > 1)
                                    {
                                        <li class="page-item">
                                            <a class="page-link" href="@Model.GetLinkPage($"razaosocial={""}&cnpj={""}", Model.FirstPage)">Primeiro</a>
                                        </li>
                                        <li class="page-item">
                                            <a class="page-link" href="@Model.GetLinkPage($"razaosocial={""}&cnpj={""}", Model.PriorPage)">Anterior</a>
                                        </li>
                                    }

                                    @for (int i = 1; i <= Model.TotalPages; i++)
                                    {
                                        var pg = Model.Pages.First(p => p.PageNumber == i);

                                        <li class="page-item @(pg.PageNumber == Model.CurrentPage ? "active" : "")">
                                            <a class="page-link" href="@Model.GetLinkPage($"razaosocial={""}&cnpj={""}", pg.PageNumber)">@pg.PageNumber</a>
                                        </li>
                                    }


                                    @if (Model.CurrentPage < Model.TotalPages)
                                    {
                                        <li class="page-item">
                                            <a class="page-link" href="@Model.GetLinkPage($"razaosocial={""}&cnpj={""}", Model.NextPage)">Próximo</a>
                                        </li>
                                        <li class="page-item">
                                            <a class="page-link" href="@Model.GetLinkPage($"razaosocial={""}&cnpj={""}", Model.LastPage)">Último</a>
                                        </li>
                                    }
                                </ul>
                            </nav>
                        }

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>